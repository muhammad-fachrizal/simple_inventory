<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.simpleinventory">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name="com.simpleinventory.controller.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.simpleinventory.activity.LoginActivity"
            android:label="@string/app_name"/>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name="com.simpleinventory.activity.AlgoritmeRSA"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.simpleinventory.activity.EditActivity"
            android:label="Edit Barang" />
        <activity
            android:name="com.simpleinventory.activity.FormBarangMasukActivity"
            android:label="Form Barang Masuk" />
        <activity
            android:name="com.simpleinventory.activity.FormBarangKeluarActivity"
            android:label="Form Barang Keluar" />
        <activity
            android:name="com.simpleinventory.activity.MainActivity"
            android:label="Registrasi" />
        <activity
            android:name="com.simpleinventory.activity.RegistrasiActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.simpleinventory.activity.BarangKeluarActivity"
            android:label="Barang Keluar" />
        <activity
            android:name="com.simpleinventory.activity.BarangMasukActivity"
            android:label="Barang Masuk" />
        <activity
            android:name="com.simpleinventory.activity.AddBarangBaruActivity"
            android:label="Barang Baru" />
    </application>

</manifest>